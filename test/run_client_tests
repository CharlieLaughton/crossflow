if __name__ == '__main__':
    myclient = clients.Client()
    tmpdir = Path(tempfile.mkdtemp())
    test_function_task(myclient, tmpdir)
    test_function_task_no_filehandler(myclient, tmpdir)
    test_subprocess_task_data(myclient, tmpdir)
    test_subprocess_task_no_filehandler(myclient, tmpdir)
    test_subprocess_task_file(myclient, tmpdir)
    myclient.close()


